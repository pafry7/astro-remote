---
import  Markup  from "root/packages/astro-remote/lib/Markup.astro"
import Heading from "../components/Heading.astro";
import {T} from "../components/T"

const example = await fetch("https://example.com/").then((res) => res.text());
const readme = `
# Hello \`world\`

> **Note**
> Some note

> **Warning**
> Some warning

"Nice"

\`inline\`

\`\`\`html filename="cool"
<div>Hello world!</div>
\`\`\`
`;
